<%-include('../partials/navbar')%>
    <form class="mt-5 d-flex justify-content-center" action="/items/<%=item._id%>/edit?_method=PATCH" method="post">
        <div class="w-50">
            <div class="p-4 m-5 card">
                <h3 class="mb-5">تعديل جهاز</h3>
                <div class="form-group form-floating mb-3">
                    <input type="text" class="form-control" id="name" name="name" placeholder="اسم الجهاز" value="<%=item.name%>" required>
                    <label for="name">اسم الجهاز</label>
                </div>
                <div class="form-group form-floating mb-3">
                    <input type="text" class="form-control" id="model" name="model" placeholder="الموديل" value="<%=item.model%>" required>
                    <label for="model">الموديل</label>
                </div>

                <div class=" mb-3">
                    <select name="type" id="type" class="form-select" required>
                        <option value="" hidden>نوع الجهاز</option>
                        <%for (let type of itemList) {%>
                            <option value="<%=type%>" <%if (type === item.type) {%>selected<%}%>>
                                <%=type%>
                            </option>
                            <%}%>
                    </select>
                </div>
                <div class="form-group form-floating mb-3">
                    <input type="text" class="form-control" id="serialNo" name="serialNo" placeholder="S/N" value="<%=item.serialNo%>"
                        required>
                    <label for="serialNo">S/N</label>
                </div>
                <!-- <div class="form-group form-floating mb-3">
                    <input type="file" class="form-control" name="image" id="image" placeholder="image"
                        >
                    <label for="image">صورة للجهاز</label>
                </div> -->
                <button type="submit" class="btn btn-primary"> <i><%-include('../partials/edit_icon.ejs')%> تعديل</i></button>
            </div>
        </div>
    </form>
    </body>

    </html>